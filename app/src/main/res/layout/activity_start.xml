<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="#ff3108"
        android:layout_height="match_parent"

        tools:context=".start">


    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_weight="2">
        <TextView
                android:text="   WELCOME"
                android:textColor="#FFFFFF"
                android:background="#8000ff"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:id="@+id/tv1" android:layout_weight="2"
                android:textSize="60sp" android:paddingLeft="10sp" android:textStyle="normal|bold|italic"
                android:paddingTop="40sp"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_weight="2">
        <TextView
                android:text="          TO"
                android:textColor="#FFFFFF"
                android:background="#8000ff"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:id="@+id/tv2" android:layout_weight="2"
                android:textSize="60sp" android:paddingLeft="10sp" android:textStyle="normal|bold|italic"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_weight="2">
        <TextView
                android:text="  TIC TAC TOE"
                android:textColor="#FFFFFF"
                android:background="#8000ff"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:id="@+id/tv3" android:layout_weight="2"
                android:textSize="60sp" android:paddingLeft="10sp" android:textStyle="normal|bold|italic"/>
    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:background="#8000ff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_weight="1" android:paddingLeft="100sp"
            android:paddingTop="40sp" android:paddingRight="10sp">
        <Button
                android:text="START GAME"
                android:background="@drawable/fourborder"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:layout_width="189dp"
                android:layout_height="wrap_content" android:id="@+id/single" android:layout_marginRight="50sp"
        />

    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:background="#8000ff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_weight="1" android:paddingLeft="105sp"
            android:paddingTop="20sp" android:paddingRight="10sp">


    </LinearLayout>
</LinearLayout>